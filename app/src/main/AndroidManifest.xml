<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ross.moviepickerapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".GenreActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".RandomizeActivity" />
        <activity android:name=".RateActivity" />
        <activity android:name=".AccountActivity" />
        <activity
            android:name=".LoggedInHomeActivity"
            android:label="@string/title_activity_logged_in_home"
            android:theme="@style/AppTheme"/>
            <activity
                android:name=".MovieFilter"
                android:label="@string/title_activity_genre_drop_down"
                android:theme="@style/AppTheme" />
            <activity
                android:name=".Search"
                android:label="@string/title_activity_search"
                android:theme="@style/AppTheme" />
            <activity
                android:name=".DisplayMovie"
                android:label=""
                android:theme="@style/AppTheme"
                android:configChanges="orientation|screenSize"/>
    </application>

</manifest>